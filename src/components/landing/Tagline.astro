---
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const { class: className } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<!-- The best thing? It's all in one -->
<div id="smooth-wrapper" class:list={["section tagline-section relative bg-zinc-900 text-white", className]}>
	<div class="tagline-arrows">
		<svg
			stroke-linecap="round"
			class="h-[15rem] w-[15rem] rotate-45 md:w-[20rem] md:rotate-0 lg:w-[25rem]"
			stroke-linejoin="round"
			viewBox="0 0 550 330">
			<!-- Line path with opacity-0 to start invisible -->
			<path
				id="tagline-arrow-path"
				fill="none"
				stroke="#fff"
				stroke-width="10"
				class="opacity-0" <!-- Add this -->
				d="M8.5,7.8C46.3,67,121.7,185.5,265.5,185.9c42.8,0.1,120.5-55.9-25.2-120.3
	C79-5.8,177.6,164.1,222.3,207.7c59.1,49.9,83.8,62.1,162.6,96.8">
			</path>
			<!-- Triangle/arrow with opacity-0 to start invisible -->
			<path class="opacity-0" id="tagline-arrow" stroke="white" stroke-width="12" d="M465.7 172.9l47.1 6-29.8 33.3-17.3-39.3z"></path>
		</svg>
	</div>
	<div class="text col-span-12 flex justify-center font-light">
		<p id="services-tagline" class="max-w-5xl text-center text-4xl md:text-5xl lg:text-7xl">
			<span class="gradient-text">{t("tagline")}</span>
		</p>
	</div>
</div>

<style>
	#services-tagline {
		font-family: "Your Font Here", sans-serif; /* Replace with your font */
		line-height: 1.2; /* Adjust line height as needed */
	}

	.gradient-text {
		background: linear-gradient(to bottom, #ffffff 50%, #666666 50%); /* Vertical gradient */
		background-size: 100% 200%; /* Double the height for animation */
		background-position-y: 100%; /* Start at the bottom */
		color: transparent;
		background-clip: text;
		-webkit-background-clip: text;
		display: inline-block; /* Ensure the gradient applies correctly */
		font-size: inherit; /* Inherit the font size from the parent */
	}
</style>

<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";
	import { MotionPathPlugin } from "gsap/MotionPathPlugin";

	gsap.registerPlugin(ScrollTrigger, MotionPathPlugin);

	function init() {
		// Animate the entire text block
		gsap.from("#services-tagline .gradient-text", {
			opacity: 0,
			y: 20, // Slide up from below
			duration: 1,
			ease: "power2.out",
			scrollTrigger: {
				trigger: "#services-tagline",
				start: "top 80%", // Start animation when the top of the text is 80% in view
				end: "bottom 20%", // End animation when the bottom of the text is 20% in view
				toggleActions: "play none none reverse", // Play animation on enter, reverse on leave
			},
		});

		// Vertical gradient animation for the text
		gsap.to(".gradient-text", {
			backgroundPositionY: "0%", // Animate the gradient from bottom to top
			duration: 2,
			ease: "power2.out",
			scrollTrigger: {
				trigger: "#services-tagline",
				start: "top 80%",
				end: "bottom 20%",
				toggleActions: "play none none reverse",
			},
		});

		// Line and arrow animations
		const linePath = document.querySelector("#tagline-arrow-path");
		gsap.set(linePath, { drawSVG: 0 });

		let otherQTl = gsap
			.timeline({
				scrollTrigger: {
					trigger: ".tagline-arrows",
					start: "center bottom",
					end: "center center",
					markers: false,
					scrub: 1,
				},
			})
			// Animate line fade and draw
			.to(linePath, {
				drawSVG: "100%",
				opacity: 1, // Fade in the line
				duration: 2,
			}, "<")
			// Animate arrow fade
			.to("#tagline-arrow", {
				opacity: 1, // Fade in the triangle
				duration: 0.1,
			}, "<")
			// Animate arrow motion along the path
			.to("#tagline-arrow", {
				motionPath: {
					path: "#tagline-arrow-path",
					align: "#tagline-arrow-path",
					alignOrigin: [0.5, 0.5],
					autoRotate: 30,
				},
			}, 0);
	}

	document.removeEventListener("DOMContentLoaded", init); // astro:page-load
	document.addEventListener("DOMContentLoaded", init); // astro:page-load
</script>
